@model LAAG.Persona

@{
    ViewBag.Title = "Detalles";
}

<div class="container">
    
    
     
          
     
        <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
            <h2 align="center">Detalles</h2>
        
   
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">@Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido1) @Html.DisplayFor(model => model.Apellido2)</h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=100" class="img-circle"> </div>
                
                <div class=" col-md-9 col-lg-9 "> 
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>@Html.DisplayNameFor(model => model.Correo):</td>
                        <td>@Html.DisplayFor(model => model.Correo)</td>
                      </tr>
                      <tr>
                        <td>@Html.DisplayNameFor(model => model.Telefono1):</td>
                        <td>@Html.DisplayFor(model => model.Telefono1)</td>
                      </tr>
                      <tr>
                        <td>@Html.DisplayNameFor(model => model.Telefono2):</td>
                        <td>@Html.DisplayFor(model => model.Telefono2)</td>
                      </tr>
                      <tr>  
                        <td>@Html.DisplayNameFor(model => model.Estado):</td>
                        <td>@Html.DisplayFor(model => model.Estado)</td>
                      </tr>
                        <tr>
                        <td>@Html.DisplayNameFor(model => model.Tipo):</td>
                        <td>@Html.DisplayFor(model => model.Tipo)</td>
                      </tr>
                      <tr>
                        <td>@Html.DisplayNameFor(model => model.NombreUsuario):</td>
                        <td>@Html.DisplayFor(model => model.NombreUsuario)</td>
                      </tr>

                    </tbody>
                  </table>
                  
                  
                </div>
              </div>
            </div>
                 <div class="panel-footer">
                        
                    </div>
            
          </div>
        </div>
      </div>
    