@model LAAG.Persona

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4> </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_Persona, new { @class = "form-control" })
        @Html.HiddenFor(model => model.Nombre, new { @class = "form-control" })
        @Html.HiddenFor(model => model.Apellido1, new { @class = "form-control" })
        @Html.HiddenFor(model => model.Apellido2, new { @class = "form-control" })
        @Html.HiddenFor(model => model.Correo, new { @class = "form-control" })
        @Html.HiddenFor(model => model.Clave, new { @class = "form-control" })
        @Html.HiddenFor(model => model.FechaCreacion, new { @class = "form-control" })
        @Html.HiddenFor(model => model.Telefono1, new { @class = "form-control" })
        @Html.HiddenFor(model => model.Telefono2, new { @class = "form-control" })
        @Html.HiddenFor(model => model.UsuarioCreacion, new { @class = "form-control" })
        @Html.HiddenFor(model => model.FechaActualizacion, new { @class = "form-control" })
        @Html.HiddenFor(model => model.UsuarioActualizacion, new { @class = "form-control" })
        @Html.HiddenFor(model => model.NombreUsuario, new { @class = "form-control" })
        @Html.HiddenFor(model => model.PasswordChange)

        <div class="form-group">
            @Html.LabelFor(model => model.Estado, new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Estado, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tipo, new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Tipo, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
            </div>
        </div>

                
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Atrás", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
