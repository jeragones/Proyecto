@model LAAG.Persona

@{
    ViewBag.Title = "Agregar";
}
@{ LAAG.Persona persona = (LAAG.Persona)Session["CurrentSession"];
 List<SelectListItem> listTipo = new List<SelectListItem>();
 listTipo.Add(new SelectListItem
 {
     Text = "Usuario",
     Value = "1"
 });
 listTipo.Add(new SelectListItem
 {
     Text = "Cliente",
     Value = "2"
 });

}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count() > 0)
                {
                <div class="alert alert-danger">
                    <a class="close" data-dismiss="alert">×</a>
                    <h5 class="alert-heading"><strong>Error!</strong></h5>
                    @Html.ValidationSummary(true)
                </div>
                }
    
<section id="RegisterForm">
<div class="container">
    <div class="row">
        <form role="form">
            <div class="col-lg-6">
            
                @Html.HiddenFor(model => model.ID_Persona)

                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre)
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Nombre",@required = "required"})
                        @Html.ValidationMessageFor(model => model.Nombre)
                        <span class="input-group-addon"></span>   
                    </div>
                </div>

                <div class="form-group">
                        @Html.LabelFor(model => model.Apellido1)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.Apellido1, new { @class = "form-control", placeholder = "Apellido", @required = "required"  })
                            @Html.ValidationMessageFor(model => model.Apellido1)
                            <span class="input-group-addon"></span>  
                        </div>
                    </div>
                

                <div class="form-group">
                        @Html.LabelFor(model => model.Apellido2)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.Apellido2,new { @class = "form-control", placeholder = "Apellido", @required = "required"  } )
                            @Html.ValidationMessageFor(model => model.Apellido2)
                            <span class="input-group-addon"></span>  
                        </div>
                    </div>

                <div class="form-group">
                        @Html.LabelFor(model => model.Correo)
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.Correo, new { @class = "form-control", type="email", placeholder = "Correo", @required = "required"  } )
                            @Html.ValidationMessageFor(model => model.Correo)
                            <span class="input-group-addon"></span>  
                        </div>
                    </div>

                @Html.HiddenFor(model => model.Clave, new { @Value="afrdgftghjgh"})
            
                <div class="form-group">
                    @Html.LabelFor(model => model.Telefono1)
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.Telefono1, new { @class = "form-control", placeholder = "Telefono"} )
                        @Html.ValidationMessageFor(model => model.Telefono1) 
                        <span class="input-group-addon"></span> 
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Telefono2)
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.Telefono2, new { @class = "form-control", placeholder = "Telefono"} )
                        @Html.ValidationMessageFor(model => model.Telefono2)
                        <span class="input-group-addon"></span>  
                    </div>
                </div>
  

                @Html.HiddenFor(model => model.Estado, new { @Value=0}) 
    
                <div class="form-group">
                    @Html.LabelFor(model => model.Tipo)

                    <div class="input-group">
                        @Html.DropDownListFor(model => model.Tipo, listTipo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Tipo)
                        <span class="input-group-addon"></span>
                    </div>
                </div>
        
                <div class="form-group">
                    @Html.LabelFor(model => model.NombreUsuario)
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.NombreUsuario, new { @class = "form-control", placeholder = "Nombre de Usuario",@required = "required"} )
                        @Html.ValidationMessageFor(model => model.NombreUsuario) 
                        <span class="input-group-addon"></span> 
                    </div>  
                </div>

                @Html.HiddenFor(model => model.PasswordChange,new { @Value=true})
                
                <p>
                    <input type="submit" value="Guardar" class="btn btn-primary pull-right"/>
                </p>

            </div>
        </form>
    </div>
</div>
</section>
}

