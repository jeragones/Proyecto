                @using (Html.BeginForm()) {
                    @Html.AntiForgeryToken()
                    <form id="frmEmail">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.name, new { id = "txtName", @class = "form-control", placeholder = "Nombre", @required = "required" })
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.email, new { id = "txtEmail", @type = "email", @class = "form-control", placeholder = "Correo electrónico", @required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group">
                                    @Html.TextArea("message", new { rows = 3, id = "txtMessage", @class = "form-control", placeholder = "Mensaje", @required = "required" })
                                </div>
                                <div class="form-group">
                                    <button type="submit" id="btnSendEmail" class="btn btn-primary">Enviar</button>
                                </div>
                            </div>
                        </div>                    
                    </form>
                }
            </div>
        </div>
    </div>
